	<!--
		added all the namespace stuff to schema tag added textNumber format
		number of properties needed to be defaulted. quotes
	-->

	<xs:annotation>
		<xs:appinfo source="http://www.ogf.org/dfdl/">
			<dfdl:format initiator="" terminator="" leadingSkip="0" trailingSkip="0" truncateSpecifiedLengthString="no"  separator=""  textBidi="no" floating="no"   encoding="ASCII" representation="text"
				byteOrder="bigEndian" initiatedContent="no" sequenceKind="ordered"
				ignoreCase="no" textPadKind="none" textTrimKind="none"
				textStringJustification="right" textStandardBase="10"
				textNumberJustification="right" textNumberRep="standard" lengthKind="explicit"
				lengthUnits="bytes" length="4" 
				alignmentUnits="bytes" fillByte="%#r66;"  alignment="1" occursCountKind="implicit"
				binaryNumberRep="packed" binaryPackedSignCodes="C D F C" binaryNumberCheckPolicy="strict"
				textNumberPattern="###" textStandardGroupingSeparator=","
				textStandardDecimalSeparator="." textStandardExponentCharacter="E"
				textNumberCheckPolicy="lax" textStandardInfinityRep="~"
				textStandardNaNRep="z" textNumberRoundingMode="roundHalfDown"
				textStandardZeroRep="" textZonedSignStyle="asciiStandard" escapeSchemeRef="" />
		</xs:appinfo>
	</xs:annotation>

	<!-- this starts the actual snippet example -->
	<xs:simpleType name="newType">
		<xs:annotation>
			<xs:appinfo source="http://www.ogf.org/dfdl/">
				<dfdl:simpleType alignment="16" />
			</xs:appinfo>
		</xs:annotation>
		<xs:restriction base="xs:integer">
			<xs:maxInclusive value="10" />
		</xs:restriction>
	</xs:simpleType>

	<xs:element name="testElement1" type="newType">
		<xs:annotation>
			<xs:appinfo source="http://www.ogf.org/dfdl/">
				<dfdl:element representation="binary" />
			</xs:appinfo>
		</xs:annotation>
	</xs:element>
  
  <!--  this group is what we parse - to confirm we are getting correct alignment, use an array of 2 elements -->

  <xs:element name="groupElem" dfdl:lengthKind="implicit" dfdl:alignment="implicit">
					<xs:complexType>
						<xs:sequence dfdl:alignment="implicit"  >
							<xs:element ref="testElement1"  minOccurs="2" maxOccurs="2"/>
							
						</xs:sequence>
					</xs:complexType>
				</xs:element>

</xs:schema>