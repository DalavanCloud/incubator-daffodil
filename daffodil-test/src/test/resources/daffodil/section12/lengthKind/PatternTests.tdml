	<tdml:parserTestCase name="lengthKindPattern_04" root="simple"
		model="lengthKindPattern-Embedded.dfdl.xsd" description="Section 12 lengthKind-pattern - simpleType - DFDL-12-087R">

		<tdml:document>hat</tdml:document>
		<tdml:infoset>
			<tdml:dfdlInfoset xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
