      <tdml:dfdlInfoset>
        <ex:e8 xmlns:ex="http://example.com">
          <ex:s1>one,two</ex:s1>
          <ex:s1>three</ex:s1>
          <ex:s1>fou/,r</ex:s1>
        </ex:e8>
      </tdml:dfdlInfoset>
    </tdml:infoset>
    <tdml:document>one/,two,three,fou\//,r</tdml:document>
  </tdml:unparserTestCase>

