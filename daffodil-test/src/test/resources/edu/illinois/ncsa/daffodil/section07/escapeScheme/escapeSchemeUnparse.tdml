          <ex:s2>double te#st</ex:s2>
        </ex:e5>
      </tdml:dfdlInfoset>
    </tdml:infoset>
  </tdml:parserTestCase>

<!--
      Test Name: unparseDelimitedEscapedString06
      Schema: delimitedStringsEscapeScheme
      Purpose: This test demonstrates unparsing a sequence of delimited strings with escape schemes
